{% extends 'base.html.twig' %}

{% block body %}

<div class="wrapper">
   
    <div class="normalheader transition animated fadeIn small-header">
        <div class="hpanel">
            <div class="panel-body">
                <h2 class="font-light m-b-xs">
                    Liste des users
                </h2>
            </div>
        </div>
</div>

<div class="content animate-panel">

        <div class="row">
             <div class="col-lg-12">
                     <div class="hpanel">

                                <div class="panel-heading hbuilt">
                    <div class="table-responsive">
                        <table>
                            <tr>
                                <td width="100%">&nbsp;</td>
                                <td>
                                    <a href="{{ path('user_new') }}">
                                        <button type="submit" class="btn w-xs btn-success btn-sm">AJOUTER UN USER
                                        </button> 
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table cellpadding="1" cellspacing="1" class="table table-utilisateur table-striped table-bordered table-hover">
                         <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Mdp</th>
                <th>Sexe</th>
                <th>Profil</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.profil }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                    </table>
                </div>
            </div>


                    </div>
                </div>  
</div>
</div>

    

</div>
{% endblock %}


