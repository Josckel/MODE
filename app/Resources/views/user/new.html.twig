{% extends 'base.html.twig' %}

{% block body %}
   <div id="wrapper" >

<div class="normalheader transition animated fadeIn small-header">
        <div class="hpanel">
            <div class="panel-body">
                <h2 class="font-light m-b-xs">
                   <a >Liste des users </a> / Ajout d'un user
                </h2>
            </div>
        </div>
</div>

<div class="content animate-panel">

    {{ form_start(form) }}
        <div class="row">
        <div class="col-lg-12">

            <div class="hpanel">
               
                <div class="panel-body">
                                        
                        
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div  class="form-group" >
                                            <div class="row">
                                                
                                                <div class="col-md-10 m-b">
                                                    {{ form_row(form.nom) }}
                                          
                                                </div>
                                                <div class="col-md-10 m-b">
                                                     {{ form_row(form.prenom) }}         
                                                </div>
                                                <div class="col-md-10 m-b">
                                                    {{ form_row(form.mail) }}
                                                </div>
                                            </div>          
                                        </div> 
                                    </div>
                                    <div class="col-lg-3">
                                        <div  class="form-group" >
                                            <div class="row">
                                            <div class="col-md-10 m-b">
                                                    {{ form_row(form.mdp) }}
                                                </div>
                                                <div class="col-md-10 m-b">
                                                    {{ form_row(form.profil) }}  
                                                </div>
                                                <div class="col-md-10 m-b">
                                                {{ form_row(form.sexe) }}              
                                                </div>
                                                
                                                
                                            </div>
                                        </div>
                                    </div>  
                                    
                                    
                                    
                                </div>
                </div>
                <div class="panel-footer">
                     <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table>
                                    <tr>
                                        <td width="100%"></td>
                                        <td>
                                            <a href="{{ path('user_index') }}">
                                                <button type="button" class="btn w-xs btn-success btn-sm">
                                                    Retour
                                                </button>
                                            </a>
                                        </td>
                                             
                                        <td>
                                            <input type="submit" class="btn w-xs btn-info btn-sm" value="Create" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
       
    {{ form_end(form) }}

    

      </div>
</div>

{% endblock %}
